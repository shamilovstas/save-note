<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/notes_list">


    <fragment
        android:id="@+id/notes_list"
        android:name="com.shamilovstas.text_encrypt.notes.list.NotesListFragment"
        tools:layout="@layout/fragment_note_list">

        <action
            android:id="@+id/action_from_list_to_compose"
            app:destination="@id/compose_note">
            <argument
                android:name="note_id"
                android:defaultValue="0" />
        </action>

        <action android:id="@+id/action_from_list_to_import"
            app:destination="@id/import_note">
            <argument
                android:name="note_id"
                android:defaultValue="0" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/compose_note"
        android:name="com.shamilovstas.text_encrypt.ComposeNoteFragment"
        tools:layout="@layout/fragment_compose_note">
        <argument
            android:name="note_id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/import_note"
        android:name="com.shamilovstas.text_encrypt.importdata.ImportMessageFragment"
        tools:layout="@layout/fragment_import">
        <action
            android:id="@+id/action_from_message_import_to_list"
            app:destination="@id/notes_list" />
    </fragment>
</navigation>